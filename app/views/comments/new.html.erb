  <%= form_for(@comment,remote:true) do |f| %> 
   <div class="field"> 
    <%= f.label :title %><br> 
    <%= f.text_area :name %> 
  </div>  
  <div class="field"> 
    <%= f.label :message %><br> 
    <%= f.text_area :description %> 
  </div> 
  
  <%= f.hidden_field :author_id,  :value =>1 %>
  <%= f.hidden_field :hotel_id,  :value =>2 %>
  <div class="actions"> 
    <%= f.submit "Create" %> 
  </div> 
<% end %>