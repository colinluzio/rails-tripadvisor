<%= form_for(@hotel) do |f| %> 
   <div class="field"> 
    <%= f.label :title %><br> 
    <%= f.text_area :name %> 
  </div>  
  <div class="field"> 
    <%= f.label :message %><br> 
    <%= f.text_area :description %> 
  </div> 
  <%= f.collection_select :country_id, @countries, :id, :name, include_blank: true %>
  <%= f.hidden_field :owner_id,  :value =>1 %>
  <div class="actions"> 
    <%= f.submit "Create", :class => 'submit_button' %> 
  </div> 
<% end %>