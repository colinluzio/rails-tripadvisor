<%= form_for @hotel, :html=>{:multipart=>true} do |f| %> 
   <div class="field"> 
    <%= f.label :title %><br> 
    <%= f.text_area :name %> 
  </div>  
  <div class="field"> 
    <%= f.label :message %><br> 
    <%= f.text_area :description %> 
  </div> 
   <div class="field"> 
    <%= f.file_field :image, multiple: true, name: "hotel[image]" %>
  </div> 
  <div class="field"> 
    <%= f.label :postcode %><br> 
    <%= f.text_area :postcode %> 
  </div>
  <%= f.collection_select :country_id, @countries, :id, :name, include_blank: true %>
  <%= f.hidden_field :owner_id,  :value =>1 %>
  
  <div class="actions"> 
    <%= f.submit "Create", :class => 'submit_button' %> 
  </div> 
<% end %>
<script id="template-upload" type="text/x-tmpl">
<div class="upload">
{%=o.name%}
<div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>